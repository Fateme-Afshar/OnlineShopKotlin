<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineMarket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_pink</item>
        <item name="colorPrimaryVariant">@color/beauty_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoadingStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

    <style name="HeadTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_pink</item>
        <item name="android:fontFamily">@font/sahel_bold</item>
        <item name="android:background">@drawable/solid_pink_gray</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.CustomBackground">
        <item name="backgroundTint">@color/beauty_light_gray</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.CustomBackgroundCategoryItem">
        <item name="backgroundTint">#D83748</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.BorderBackground">
        <item name="android:background">@drawable/border_gray</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sahel_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.PinkBackground">
        <item name="backgroundTint">@color/light_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sahel_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStylePersian">
        <item name="android:fontFamily">@font/sahel_bold</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextStylePersian.YellowBackground">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/solid_light_yellow</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NumberStyle" parent="TextStylePersian">
        <item name="android:textSize">10sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="Theme.OnlineMarket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OnlineMarket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OnlineMarket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyNumberPickerTheme">
        <item name="colorControlNormal ">#D10A37</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Base.Widget.AppCompat.RatingBar.Small.CustomRatingMain">
        <item name="android:progressDrawable">@drawable/img_rating</item>
        <item name="android:indeterminateDrawable">@drawable/img_default_rating</item>
    </style>

    <style name="Base.Widget.AppCompat.RatingBar.Small.CustomRating">
        <item name="android:indeterminateDrawable">@drawable/img_star</item>
    </style>

    <style name="Base.Widget.AppCompat.RatingBar.Custom">
        <item name="android:minHeight">15dp</item>
        <item name="android:minWidth">15dp</item>
    </style>
</resources>